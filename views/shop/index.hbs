{{# each products}}
<div class="row">
  {{# each this}}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="{{this.imagePath}}" alt="Flail">
        <div class="caption">
          <h3>{{this.title}}</h3>
          <hr/>
          <div class='clearfix'>
            <p class="price pull-left store-price">${{this.price}}</p>
            <p><a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right" role="button">Add to Cart</a></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
{{/each}}
