{{# if products}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offest-3">
    {{# each products}}
    <ul class="list-group">
      <li class="list-group-item">
        <span class="badge">{{this.qty}}</span>
        <strong>{{this.item.title}}</strong>
        <span class="label label-success">${{this.price}}</span>
        <div class="button-group">
          <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li href="#">Remove One</li>
            <li href="#">Remove All</li>
          </ul>
        </div>
      </li>
    </ul>
    {{/each}}
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offest-3">
    <strong>Total: {{this.totalPrice}} </strong>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offest-3">
    <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
  </div>
</div>
{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offest-3">
    <h2>There doesn't seem to be anything here.</h2>
    <p><a href="/">Return to Store?</a></p>
  </div>
</div>
{{/if}}
